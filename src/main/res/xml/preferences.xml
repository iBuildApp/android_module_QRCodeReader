<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory android:title="When scanning for barcodes, decode\u2026">
    <CheckBoxPreference
        android:key="preferences_decode_1D"
        android:defaultValue="true"
        android:title="1D barcodes"/>
    <CheckBoxPreference
        android:key="preferences_decode_QR"
        android:defaultValue="true"
        android:title="QR Codes"/>
    <CheckBoxPreference
        android:key="preferences_decode_Data_Matrix"
        android:defaultValue="true"
        android:title="Data Matrix"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="When a barcode is found\u2026">
    <CheckBoxPreference
        android:key="preferences_play_beep"
        android:defaultValue="true"
        android:title="Beep"/>
    <CheckBoxPreference
        android:key="preferences_vibrate"
        android:defaultValue="false"
        android:title="Vibrate"/>
    <CheckBoxPreference
        android:key="preferences_copy_to_clipboard"
        android:defaultValue="true"
        android:title="Copy to clipboard"/>
    <CheckBoxPreference
        android:key="preferences_remember_duplicates"
        android:defaultValue="false"
        android:title="Remember duplicates"
        android:summary="Store multiple scans of the same barcode in History"/>
    <CheckBoxPreference
        android:key="preferences_supplemental"
        android:defaultValue="true"
        android:title="Retrieve more info"
        android:summary="Try to retrieve more information about the barcode contents"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="Result settings">
    <EditTextPreference
        android:key="preferences_custom_product_search"
        android:title="Custom search URL"
        android:summary="Substitutions:"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="General settings">
    <CheckBoxPreference
        android:key="preferences_front_light"
        android:defaultValue="false"
        android:title="Use front light"
        android:summary="Improves scanning in low light on some phones, but may cause glare. Does not work on all phones."/>
    <CheckBoxPreference
        android:key="preferences_auto_focus"
        android:defaultValue="true"
        android:title="Use auto focus"/>
    <CheckBoxPreference
        android:key="preferences_bulk_mode"
        android:defaultValue="false"
        android:title="Bulk scan mode"
        android:summary="Scan and save many barcodes continuously"/>
    <!--<ListPreference
        android:key="preferences_search_country"
        android:defaultValue="-"
        android:entries="@array/country_codes"
        android:entryValues="@array/country_codes"
        android:title="@string/preferences_search_country"/>-->
  </PreferenceCategory>
</PreferenceScreen>
